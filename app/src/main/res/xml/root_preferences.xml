<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/message_preferences_header">
        <EditTextPreference
            app:key="detection_message_text"
            app:title="@string/detection_message_preference_title"
            android:defaultValue="@string/detection_default_message"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="mute_phone"
            android:title="Mute phone while listening" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/view_preferences_header">
        <SwitchPreference
            android:defaultValue="false"
            android:key="night_mode"
            android:title="@string/night_mode_preference_title" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="display_results"
            android:title="@string/display_classification_results_preference_title" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="display_timer"
            android:title="@string/display_timer_preference_title" />
    </PreferenceCategory>

</PreferenceScreen>